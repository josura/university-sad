kernel void vecinit(global float *out, int n)
{
	const int i = get_global_id(0);
	if (i < n)
	out[i] = (i+1);
}

kernel void reduce2(global float * restrict out,
	global const float2 * restrict in, int npairs)
{
	int i = get_global_id(0);
	if (i >= npairs) return;
	float2 v = in[i];
	out[i] = v.x + v.y;
}
